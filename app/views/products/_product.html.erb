<div class="col-md-3 col-sm-12 mt-3">
  <div class="card" style="width: 18rem;">
    <%= image_tag product.image.url(:medium), class: "card-img-top", alt: "#{product.name} image" %>
    
    <div class="card-body">
      <h5 class="card-title"><%= product.name %></h5>
      <p class="card-text"><%= product.price %></p>
      <%= link_to "Buy", product_path(product), class: "btn btn-primary" %>
    </div>
  </div>
</div>
